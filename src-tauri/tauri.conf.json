{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "computer_info_report_generator",
  "version": "0.1.0",
  "identifier": "com.github.drewchase.cirg",
  "build": {
    "devUrl": "http://localhost:1420",

    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",

    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Computer Info Report Generator",
        "width": 1280,
        "height": 720,
        "decorations": false
        
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
